<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/hearRate"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:text="Data " />

    <Button
        android:id="@+id/authorize_button"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_selector"
        android:text="Authorize with Fitbit" />

    <Button
        android:id="@+id/get_heart_rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Heart Rate Data"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/authorization_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Authorization Pending"
        android:textSize="18sp" />

    <Button
        android:id="@+id/goToDataInfoButton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Go to data info" />

    <Button
        android:id="@+id/sms_sender_page_button"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SMS Sender" />
</LinearLayout>

