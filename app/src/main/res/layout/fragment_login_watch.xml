<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/asktologin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend"
        android:paddingHorizontal="50dp"
        android:text="Fitbit watch is required for the app to function"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/button_fitbit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_fitbit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:background="@drawable/button_white"
        android:drawableStart="@drawable/logo_fitbit"
        android:fontFamily="@font/lexend"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:text="CONNECT WITH FITBIT"
        android:textFontWeight="900"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_back_setup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:drawableStart="@drawable/ic_arrow_left"
            android:drawableTint="#989898"
            android:paddingLeft="5dp"
            android:fontFamily="@font/lexend"
            android:text="BACK"
            android:textColor="#989898"
            android:textSize="25sp" />
        <Button
            android:id="@+id/button_next_setup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_soft"
            android:fontFamily="@font/lexend"
            android:paddingRight="5dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:layout_marginLeft="10dp"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>