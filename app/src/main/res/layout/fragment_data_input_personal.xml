<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataInputPersonal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend"
            android:text="Weight"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:id="@+id/inputWeight"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2.5"
                android:background="@drawable/gradient_white"
                android:fontFamily="@font/lexend"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:maxLength="3"/>

            <TextView
                android:id="@+id/inputWeightUnits"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_white_pressed"
                android:fontFamily="@font/lexend"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="kg"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend"
            android:text="Height"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:id="@+id/inputHeight"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2.5"
                android:background="@drawable/gradient_white"
                android:fontFamily="@font/lexend"
                android:inputType="numberSigned"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:maxLength="3"/>

            <TextView
                android:id="@+id/inputHeightUnits"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_white_pressed"
                android:fontFamily="@font/lexend"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_back_setup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:drawableStart="@drawable/ic_arrow_left"
            android:fontFamily="@font/lexend"
            android:drawableTint="#989898"
            android:paddingLeft="5dp"
            android:text="BACK"
            android:textColor="#989898"
            android:textSize="25sp" />
        <Button
            android:id="@+id/button_next_setup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_soft"
            android:fontFamily="@font/lexend"
            android:paddingRight="5dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:layout_marginLeft="10dp"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>