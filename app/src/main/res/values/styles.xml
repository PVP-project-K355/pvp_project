<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView.MainPageNavButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">0dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_gravity">center_vertical</item>
    </style>

    <style name="MainPageNavButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MainPageNavButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MainPageButtonIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MainPageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/gradient_bluesoft</item>
        <item name="android:text">@string/go_to_main_page</item>
    </style>


        <style name="SleepDurationTextViewStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textColor">@color/sleep_duration_text_color</item>  <item name="android:textStyle">bold</item>
            <item name="android:textAlignment">center</item>
            <item name="android:layout_marginTop">16dp</item>  </style>

        <style name="SleepChartStyle">
            <item name="android:textColor">@color/sleep_chart_value_text_color</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">200dp</item>
            <item name="android:layout_margin">8dp</item>
        </style>

        <color name="sleep_duration_text_color">#333333</color>  <color name="sleep_chart_value_text_color">#666666</color>

</resources>